{
  "manifest_version": 2,
  "name": "CloudLink",
  "version": "1.0",
  "description": "Inserting file link to mail with optional password and expiration date",
  "default_locale": "en",
  "applications": {
    "gecko": {
      "id": "thunderbird-cloudlink@manderla.dev",
      "strict_min_version": "91.0"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png"
  },
  "permissions": ["compose"],
  "compose_action": {
    "default_popup": "compose_action.html",
    "default_title": "Insert file link",
    "default_area": "formattoolbar",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "64": "icons/icon-64.png"
    }
  }
}
